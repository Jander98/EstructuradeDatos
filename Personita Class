Personita .h

#pragma once
class Personita
{

private:
	int edad;
	int CI;

public:
	Personita(int _edad, int _CI);
	~Personita(void);
	void leer();
	void correr();
};


Personita.cpp

#include "StdAfx.h"
#include "Personita.h"
#include <iostream>
using namespace std;

Personita::Personita(int _edad, int _CI)
{  edad=_edad;
   CI=_CI;
}

void Personita::leer()
{cout<<"soy "<<CI<<" estoy leyendo"<<endl;

}

void Personita::correr()
{
	cout<<"soy "<<CI<<" tengo "<<edad<<" y estoy corriendo solito"<<endl;

}
Personita::~Personita(void)
{
}



Person main

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include "Personita.h"
using namespace std;

void main()
{ Personita p1(20,4370);
  Personita p2(50,2856);
  p1.leer();
  p1.correr();
  p2.correr();
  getch();



} 
